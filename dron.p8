-- trees

function tree()
	local tree = {
  x=flr(rnd(128)),
  y=flr(rnd(128)),

		collision=function(self,d)
		 	 local distsq=(d.x-self.x)*(d.x-self.x)+
	  	(d.y-self.y)*(d.y-self.y)
	  if distsq<64 then
	   dead=true
 	 end
		end,
		
  update = function(self,d)
 	 movedown(self,1)
 	 self:collision(d)
  end,
  
  draw=function(self)
   drawtree(self.x-4,self.y-4)
  end
 }
	return tree
end

function drawtree(x,y)
	for i=6,13 do
	spr(i,
		 transform(x,i-6,64),
		transform(y,i-6,256))
	end
end

function drawtreepersp(x,y)
	for i=6,13 do
		sspr(48+(i-6)*8,0,8,8,
			perspective(
			 transform(x,i-6,64)
		,y)

			,
		 transform(y,i-6,256),8*(1+y/100),8*(1+y/100)
		)
	end
end
