-- pico8 callbacks, game state

dead=false

function _update()
	if dead then 
	 reset()
	end

	dron:update()
 for _,g in pairs(gates) do
  g:update(dron)
 end
 	
	for _,t in pairs(trees) do
		t:update(dron)
	end
	
	fnc:update(dron)
	
	ce_heap_sort(drawthings)
end

function _draw()
	cls(2)
	
	for _,t in pairs(drawthings) do
		t:draw()
	end

 print(score,0,0,7)	
end

function _init()
 reset()
end

function reset()
 dead=false
 drawthings={}
 trees={}
	fnc= fence()
 dron = drone() 
 gates={}
 score=0
 for i=0,10 do  
  local t=tree()
  add(trees,t)
  add(drawthings,t)  
 end 

 for i=0,4 do
  local g=gate()
 	add(gates, g)
 	add(drawthings, g)
 end
 add(drawthings,fnc)
 add(drawthings,dron)
 
end


