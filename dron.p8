function fence()
 return {
	y =-rnd(256),
		collision=function(self,d)
		 if abs(self.y-d.y)<3 and 
		 d.z < 3
		 then			 
	   dead=true
	  end
		end,

	update=function(self,d)
		movedown(self,1)
		self:collision(d)
	end,
	draw=function(self)
	 for i=0,128,8 do
	  spr(14,i,self.y)
	 end
	end
}
end
