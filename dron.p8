--gate
function gate()
 return {
  passed=false,
  x=flr(rnd(128)),
  y=flr(rnd(128)),
	
	update=function(self,d)
	 movedown(self,1)
	 self:collision(d)
	end,
	
	collision=function(self,d)
	if abs(self.y-d.y)<3 
	   and	d.z < 3
	   and d.x>=self.x
	   and d.x<self.x+16
	   and not self.passed
		 then			 
	   score+=1
	   self.passed=true
	  end
	end,
	
	draw=function(self)
	 for i=0,128,8 do
	  spr(15,self.x-8,self.y)
	  spr(16,self.x,self.y)
	 end
	end
}
end
